{
  "hosting": {
    "public": "build",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/!(sw).@(js|svg|css|ico|png|jpe?g|gif|woff2?)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31461276"
        }]
      },
      {
        "source" : "/sw.js",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "no-cache"
        }]
      },
      {
        "source": "/static/*",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31461276"
        }]
      }
    ]
  }
}
